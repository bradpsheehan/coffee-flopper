<div class="container">
  <div class="row">
    <div id="map" class="container"></div>
  </div>
  <div class="row">
    <table class="table">
      <tr class="container">
        <td class="span3">
          <p class="lead">
          <b>Flopper:</b>
          <%= @shop.name %><br/>
          <%= review(@shop) %><%= @shop.yelp.rating %>
          </p>
        </td>
        <td>
          <p class="lead">
            <%= link_to @shop.website, @shop.website %>
          </p>
        </td>
        <td>
          <p class="lead">
          <%= link_to number_to_phone(@yelp_details.phone),
          "tel:+#{@yelp_details.phone}" %>
          </p>
        </td>
      </tr>
    </table>
  </div>

  <div class="row">
    <table class="table">
      <tr class="container">
        <td class="span3">
          <p class="pull-left">
            <b>Review:</b>
            <%= @yelp_details.snippet_text %>
          </p>
        </td>
        <td>
          <p class="lead">
            <% address = @shop.address %>
            <%= address.line1 %>
            <%= address.line2 %>
            <%= address.city %>
            <%= address.state %>
            <%= address.zip %>
            <p>
              <%= address.latitude %>
              <%= address.longitude %>
            </p>
          </p>
        </td>
        <td>
          <p class="lead">
            <%= "Groups: #{@shop.groups}" %>
            <%= "Wifi: #{@shop.wifi}" %>
          </p>
        </td>
      </tr>
    </table>
  </div>


  <%= @yelp_details.inspect %>


  <%= render "map", :object => @shop  %>
</div>
