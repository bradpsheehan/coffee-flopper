<%= simple_form_for(@shop, :html => {:class => 'form-horizontal' }) do |f| %>
  <% if @shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shop.errors.count, "error") %> prohibited this shop from being saved:</h2>

      <ul>
      <% @shop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="span4">
    <%= f.input :name %>
    <%= f.input :website %>
    <%= f.input :phone %>


    <div class="offset2 span3">
      <div class="toggle">
        <label class="toggle-radio" for="wifitrue">Wifi</label>
        <input type="radio" name="wifi" id="wifitrue" value="true" checked="checked">
        <label class="toggle-radio" for="wififalse">No Wifi</label>
        <input type="radio" name="wifi" id="wififalse" value="false">
      </div>

      <div class="toggle">
        <label class="toggle-radio" for="grouptrue">Groups</label>
        <input type="radio" name="groups" id="grouptrue" value="true" checked="checked">
        <label class="toggle-radio" for="groupfalse">No Groups</label>
        <input type="radio" name="groups" id="groupfalse" value="false">
      </div>
      <%= f.button :submit, class:"btn-large" %>
    </div>
  </div>
  <div class="span4">
    <%= f.simple_fields_for :address do |p| %>
      <%= p.input :line1, label: "Street" %>
      <%= p.input :line2, label: "Street2" %>
      <%= p.input :city %>
      <%= p.input :state %>
      <%= p.input :zip %>
    <% end %>
  </div>
<% end %>

