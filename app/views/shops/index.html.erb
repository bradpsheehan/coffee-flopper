<h1><%= title %></h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Rating</th>
    <th>Recent Review:</th>
    <th>Website</th>
    <th>Phone</th>
    <th>Wifi</th>
    <th>Groups</th>
    <th>Street</th>
    <th>City</th>
    <th>show</th>
    <th>edit</th>
    <th>destroy</th>
  </tr>

<% @shops.each do |shop| %>
  <tr>
    <td><h2><%= shop.name %></h2></td>
    <td><%= image_tag(shop.yelp.rating_img_url_large) %></td>
    <td class="span3"><i><%= shop.yelp.snippet_text %></i></td>
    <td><%= shop.website %></td>
    <td><%= shop.phone %></td>
    <td><%= shop.wifi %></td>
    <td><%= shop.groups %></td>
    <td><%= shop.address.line1 %></td>
    <td><%= shop.address.city %></td>
    <td><%= link_to 'Show', shop %></td>
    <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
    <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Shop', new_shop_path %>
